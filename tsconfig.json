{
  "compilerOptions": {
    "outDir": "./build/",

    "noImplicitAny": true,
    "module": "ESNext",

    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,

    "removeComments": true,

    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,

    // !!! esbuild - doesn't work without it
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
